{% for master in masters -%}
{% endfor %}
- hosts: {{ masters[0].split(',')[0] }}
  gather_facts: no
  become: yes
  become_method: sudo
  tasks:
  - name: copy init files
    copy:
      src: ../files/init
      dest: /tmp/

  - name: create secret
    shell: cd /tmp/init/secret && sh gen_secret.sh &&  kubectl create -f /tmp/init/secret

  - name: clean tmp folder
    shell: rm -rf /tmp/init
